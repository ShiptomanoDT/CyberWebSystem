@model IEnumerable<CyberWebSystem.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div>
    <p>Buscar por Correo o Nombre:</p>
    <input id="search" />
    <button onclick="search()">Buscar</button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rol)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section scripts
    {
    <script>
        function search() {
            var searchTerm = $("#search").val().toLowerCase();

            $("tr").each(function (index, value) {
                if (index > 0) {
                    var emailValue = $(this).find("td:eq(0)").text().toLowerCase();
                    var nombreCompletoValue = $(this).find("td:eq(1)").text().toLowerCase();

                    if (!emailValue.includes(searchTerm) && !nombreCompletoValue.includes(searchTerm)) {
                        $(this).attr("hidden", true);
                    } else {
                        $(this).removeAttr("hidden");
                    }
                }
            });
        }

        $("#search").keydown(function (event) {
            if (event.keyCode === 13) {
                event.preventDefault();
                search();
            }
        });
    </script>
}